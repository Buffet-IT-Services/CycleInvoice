# Django Configuration
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_TIME_ZONE=UTC

# Database Configuration (if running locally without Docker)
# DJANGO_DB_NAME=postgres
# DJANGO_DB_USER=cycleinvoice
# DJANGO_DB_PASSWORD=cycleinvoice
# DJANGO_DB_HOST=localhost
# DJANGO_DB_PORT=5432

# S3 Storage Configuration (optional)
# S3_ACCESS_KEY=your-s3-access-key
# S3_SECRET_KEY=your-s3-secret-key
# S3_BUCKET_NAME=your-bucket-name

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key
JWT_AUTH_COOKIE=jwt
JWT_AUTH_COOKIE_SAMESITE=Lax
JWT_AUTH_HEADER_PREFIX=Bearer

# Celery Configuration
# Note: When using docker-compose, this defaults to redis://:foobared@redis:6379/0
# The default Redis password 'foobared' matches the password set in docker-compose.yml
# For production, you should change the Redis password in docker-compose.yml and set this variable accordingly
# If running locally or using a different broker, set this variable
# CELERY_BROKER_URL=redis://:your-redis-password@localhost:6379/0
